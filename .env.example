# Docker Environment Variables
# Copy this file to .env and modify as needed

# Data persistence paths
DATA_PATH=/app/data
CACHE_PATH=/app/cache
DATABASE_PATH=/app/data/yugioh_deckbuilder.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Cache Configuration (in seconds)
CARD_DATA_TTL=86400      # 24 hours
SEARCH_RESULTS_TTL=1800  # 30 minutes
DEFAULT_CACHE_TTL=3600   # 1 hour

# Redis Configuration (optional - will fall back to disk cache if unavailable)
# REDIS_URL=redis://redis:6379

# YGOPRODeck API Configuration
YGOPRODECK_API_URL=https://db.ygoprodeck.com/api/v7
YGOPRODECK_RATE_LIMIT=20  # requests per second

# YGOProg Integration (for binder sync)
YGOPROG_USERNAME=your_username_here
YGOPROG_PASSWORD=your_password_here
YGOPROG_TOKEN_FILE=ygoprog_token.json
YGOPROG_DEFAULT_BINDER_ID=68d18d726fd54b31888495b2